<html>

	<head>
		<title>@ViewBag.Title</title>
        <link rel="icon" href="~/Content/images/logo.png"">
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
